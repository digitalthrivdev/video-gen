# Environment Variables Configuration
# Copy this file to .env.local and fill in your actual values

# Prisma Configuration
# Set to 'true' to enable Prisma query logging, 'false' or leave empty to disable
PRISMA_LOG_QUERIES=false

# Database
# For local development
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# For Vercel deployment with connection pooling (e.g., Neon, Supabase, etc.)
# DIRECT_URL is required for migrations in serverless environments
DIRECT_URL="postgresql://username:password@localhost:5432/database_name"

# Google OAuth Configuration (Required for NextAuth)
GOOGLE_CLIENT_ID="your_google_client_id_here"
GOOGLE_CLIENT_SECRET="your_google_client_secret_here"

# NextAuth Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Veo3 API
VEO3_API_KEY="your_veo3_api_key_here"

# ImageKit Configuration
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_imagekit_id"
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY="your_imagekit_public_key"
IMAGEKIT_PRIVATE_KEY="your_imagekit_private_key"

# FAL AI Configuration
FAL_API_KEY="your_fal_api_key_here"

# Cashfree Payment Configuration
CASHFREE_APP_ID="your_cashfree_app_id"
CASHFREE_SECRET_KEY="your_cashfree_secret_key"
CASHFREE_ENVIRONMENT="sandbox" # or "production"
